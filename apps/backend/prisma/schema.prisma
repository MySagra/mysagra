generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma_client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  available Boolean @default(true)
  position  Int     @default(0)
  image     String?
  foods     Food[]

  @@map("categories")
}

model Ingredient {
  id   String @id @default(cuid())
  name String

  foodIngredients FoodIngredient[]

  @@map("ingredients")
}

model Food {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  price       Decimal
  available   Boolean @default(true)

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  categoryId Int

  orderItems      OrderItem[]
  foodIngredients FoodIngredient[]

  @@map("foods")
}

model FoodIngredient {
  food   Food   @relation(fields: [foodId], references: [id], onDelete: Cascade)
  foodId String

  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  ingredientId String

  @@id([foodId, ingredientId])
  @@map("food_ingredients")
}

enum OrderStatus {
  CONFIRMED
  COMPLETED
  PICKED_UP
}

enum PaymentMethod {
  CASH
  CARD
}

model Order {
  id          Int     @id @default(autoincrement())
  displayCode String? @unique

  table    String
  customer String

  createdAt DateTime? @default(now())
  subTotal  Decimal

  orderItems     OrderItem[]
  confirmedOrder ConfirmedOrder?

  @@map("orders")
}

model OrderItem {
  id       String @id @default(cuid())
  quantity Int

  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId Int

  food   Food   @relation(fields: [foodId], references: [id], onDelete: Cascade)
  foodId String

  notes String?

  @@unique([orderId, foodId, notes], name: "unique_order_food_notes")
  @@map("order_items")
}

model DailyTicketCounter {
  id      String   @id @default(cuid())
  date    DateTime @unique @db.Date
  counter Int      @default(0)
}

model ConfirmedOrder {
  id String @id @default(cuid())

  ticketNumber  Int?
  orderId       Int           @unique
  status        OrderStatus   @default(CONFIRMED)
  paymentMethod PaymentMethod
  discount      Decimal       @default(0)
  surcharge     Decimal       @default(0)
  total         Decimal
  confirmedAt   DateTime      @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("confirmed_orders")
}

//users sections
model Role {
  id   Int    @id @default(autoincrement())
  name String @unique

  users User[]

  @@map("roles")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  role          Role           @relation(fields: [roleId], references: [id])
  roleId        Int
  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique @db.VarChar(500)
  userId    Int
  createdAt DateTime  @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  ip        String?
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}
